#!/usr/bin/env python3
"""Mock squeue command for testing."""

import argparse
import random
import sys

# Constants for parsing
MIN_JOB_FIELDS_WITH_USER = 7
MIN_JOB_FIELDS_WITH_TRES = 8
MIN_JOB_FIELDS_WITHOUT_USER = 6
MIN_USER_INDEX = 2
MIN_RANDOM_JOBS = 2
MAX_RANDOM_JOBS = 10

