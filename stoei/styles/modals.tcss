/*
 * Full-screen and modal styles for stoei TUI.
 *
 * Overlay Types:
 * 1. Confirmation modals (semi-transparent, round border) - CancelConfirmScreen, EnergyEnableModal
 * 2. Input dialogs (semi-transparent, double border) - JobInputScreen
 * 3. Full-screen info viewers (solid bg, header/content/footer) - JobInfoScreen, LogViewerScreen, etc.
 * 4. Centered info screens (solid bg, double border) - HelpScreen, SettingsScreen
 */

/* =============================================================================
 * COMMON MODAL STYLES
 * ============================================================================= */

/* Base styles for centered modals with semi-transparent overlay */
.modal-overlay {
    layout: vertical;
    align: center middle;
    background: $background 50%;
}

/* Base container for centered modals */
.modal-container {
    height: auto;
    padding: 2 3;
    background: $panel;
}

/* Base title for modals */
.modal-title {
    width: 100%;
    content-align: center middle;
    padding: 1 0;
    text-style: bold;
    border-bottom: solid $border-muted;
    margin-bottom: 1;
}

/* Base button row for modals */
.modal-button-row {
    width: 100%;
    height: auto;
    layout: horizontal;
    align: center middle;
    margin-top: 1;
}

/* Base button styling for modals */
.modal-button {
    width: 1fr;
    margin: 0 1;
    height: 3;
    text-style: bold;
}

/* =============================================================================
 * JOB INPUT SCREEN - Input dialog modal
 * ============================================================================= */
JobInputScreen {
    layout: vertical;
    align: center middle;
    background: $background 50%;
}

JobInputScreen > Vertical {
    width: 70;
    height: auto;
    padding: 2 3;
    background: $panel;
    border: double $accent;
}

JobInputScreen #input-title {
    width: 100%;
    content-align: center middle;
    padding: 1 0;
    margin-bottom: 1;
    color: $accent;
    text-style: bold;
    border-bottom: solid $border-muted;
}

JobInputScreen #input-hint {
    width: 100%;
    content-align: center middle;
    color: $text-muted;
    margin-bottom: 1;
}

JobInputScreen Input {
    width: 100%;
    margin: 1 0;
    border: tall $accent;
    background: $background;
}

JobInputScreen Input:focus {
    border: tall $accent;
}

JobInputScreen #button-row {
    width: 100%;
    height: auto;
    layout: horizontal;
    align: center middle;
    margin-top: 1;
}

JobInputScreen Button {
    width: 1fr;
    margin: 0 1;
    height: 3;
    text-style: bold;
}

JobInputScreen #submit-btn {
    background: $accent;
    color: $text-on-accent;
}

JobInputScreen #submit-btn:focus {
    border: tall $accent;
}

JobInputScreen #cancel-btn {
    background: $surface;
}

JobInputScreen #cancel-btn:focus {
    border: tall $surface;
}

/* =============================================================================
 * FULL-SCREEN INFO VIEWERS - Common base styles
 * These screens share: header with heavy border, scrollable content, footer
 * ============================================================================= */

/* Common header styles for full-screen info viewers */
.info-screen-header {
    width: 100%;
    height: auto;
    padding: 1 2;
    background: $panel;
    border-bottom: heavy $accent;
}

.info-screen-title {
    width: 100%;
    content-align: center middle;
    color: $accent;
    text-style: bold;
}

.info-screen-subtitle {
    width: 100%;
    content-align: center middle;
    color: $text-muted;
    margin-top: 1;
}

/* Common content area for full-screen info viewers */
.info-screen-content {
    height: 1fr;
    padding: 1 2;
    background: $background;
}

/* Common footer styles for full-screen info viewers */
.info-screen-footer {
    width: 100%;
    height: auto;
    padding: 1 2;
    background: $panel;
    border-top: solid $border-muted;
    layout: horizontal;
    align: center middle;
}

.info-screen-hint {
    width: 1fr;
    content-align: left middle;
    color: $text-muted;
    margin-right: 2;
}

/* Common error container for full-screen info viewers */
.info-screen-error {
    height: 1fr;
    padding: 2;
    content-align: center middle;
    background: $background;
}

/* =============================================================================
 * JOB INFO SCREEN - Full-screen info viewer
 * ============================================================================= */
JobInfoScreen {
    layout: vertical;
    background: $background;
}

JobInfoScreen > Vertical {
    width: 100%;
    height: 100%;
    padding: 0;
