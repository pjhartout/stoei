    text-style: bold;
    border-bottom: solid $border-muted;
}

SettingsScreen .settings-label {
    width: 100%;
    color: $text-muted;
    margin-top: 1;
}

SettingsScreen Select,
SettingsScreen Input {
    width: 100%;
    margin: 1 0;
}

SettingsScreen Input {
    border: tall $accent;
    background: $background;
}

SettingsScreen Input:focus {
    border: tall $accent;
}

SettingsScreen #settings-button-row {
    width: 100%;
    height: auto;
    layout: horizontal;
    margin-top: 1;
}

SettingsScreen #settings-save {
    width: 1fr;
    margin: 0 1;
    background: $accent;
    color: $text-on-accent;
}

SettingsScreen #settings-cancel {
    width: 1fr;
    margin: 0 1;
    background: $surface;
}

